<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="android:textColorPrimary">@color/grey_white_1000</item>
        <item name="android:textColorPrimaryInverse">@color/grey_black_1000</item>
        <item name="android:actionMenuTextColor">@color/grey_white_1000</item>
        <item name="android:textColorSecondary">@color/grey_white_1000</item>

        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorControlHighlight">@color/accent_color</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/my_awesome_color</item>
        <item name="background">@color/my_awesome_color</item>
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>
</resources>
